<Entity 
  name="$projectile_default" tags="projectile_player"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
		  gravity_y="0"
		  air_friction="0"
		  mass="0.01"
          updates_velocity="0"
		  >
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="0.1"
    speed_max="0.1"
    friction="0"
    direction_random_rad="0"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="0"
    on_collision_remove_projectile="0"
    lifetime="300"
    damage="0.0"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.0"
    create_shell_casing="0"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_small.xml"
    shoot_light_flash_r="255"
    shoot_light_flash_g="255"
    shoot_light_flash_b="255"
    shoot_light_flash_radius="8"
    die_on_low_velocity="0"
    velocity_sets_rotation="1"
    velocity_updates_animation="1"
    velocity_sets_scale="1"
    velocity_sets_scale_coeff="0.6"
	knockback_force="0.0"
	physics_impulse_coeff="0"
    penetrate_entities="0"
	damage_every_x_frames="25"
     >
	<damage_by_type>
	</damage_by_type>
    <config_explosion
        damage="0.0"
        explosion_radius="0"
    >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/gkbrkn_noita/files/gkbrkn/actions/stored_shot/projectile_sprite.xml" 
    next_rect_animation="default"
    rect_animation="default" 
     >
  </SpriteComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.snd"
      event_root="player_projectiles/bullet_burst_of_air">
  </AudioComponent>
  
  <SpriteParticleEmitterComponent
		sprite_file="data/particles/spark_glitter.xml"
		emission_interval_min_frames="2"
		emission_interval_max_frames="16"
		additive="1"
		emissive="1"
		scale.x="1.0"
		scale.y="1.0"
		randomize_lifetime.min="0.5"
		randomize_lifetime.max="2.0"
		scale_velocity.x="0"
		scale_velocity.y="0"
		randomize_velocity.min_x="-10"
		randomize_velocity.max_x="10"
		randomize_velocity.min_y="-10"
		randomize_velocity.max_y="10"
		randomize_position.min_x="-6"
		randomize_position.max_x="6"
		randomize_position.min_y="-6"
		randomize_position.max_y="6"
		>
	</SpriteParticleEmitterComponent>

    <LuaComponent
		script_source_file="mods/gkbrkn_noita/files/gkbrkn/actions/stored_shot/projectile_update.lua"
		execute_every_n_frame="1"
		>
	</LuaComponent>

</Entity>

